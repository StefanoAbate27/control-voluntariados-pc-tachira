{
  "name": "talento-humano-pc-tachira",
  "version": "1.0.0",
  "description": "Sistema de Control de Voluntariados PC Táchira",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "org.talento.humano.pc.tachira",
    "productName": "Talento Humano PC Táchira",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  }
}
